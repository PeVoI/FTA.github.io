<Window x:Class="FTA.Tables"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FTA"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="FreightTransportationApp" Height="500" Width="600">
    <Grid Background="#2F4F4F">
        <Border MinWidth="400" Margin="15" Background="White" VerticalAlignment="Center" Padding="30" MaxWidth="550" CornerRadius="5">
            <StackPanel>
                <TextBlock Text="Таблицы" HorizontalAlignment="Center" FontSize="30" FontWeight="Bold" Margin="0 0 0 20" />


                <Button Content="Маршруты" Background="#696969" Margin="0 10" Width="250" Click="Button_Marshrut_Click" BorderBrush="{x:Null}"/>
                <Button Content="Водители" Background="#696969" Margin="0 10" Width="250" Click="Button_Voditel_Click" BorderBrush="{x:Null}"/>
                <Button Content="Проделанная работа" Background="#696969" Margin="0 10" Width="250" Click="Button_Work_Click" BorderBrush="{x:Null}"/>

            </StackPanel>
        </Border>
    </Grid>
</Window>
